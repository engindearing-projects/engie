# ============================================
# Familiar - Environment Variables
# Copy to .env and fill in your values
# ============================================

# Gateway auth token (generate with: openssl rand -hex 32)
FAMILIAR_GATEWAY_TOKEN=

# AI Providers
# Required: used by Familiar agent framework for orchestration (minimal token use)
ANTHROPIC_API_KEY=
# Optional: not used by default
OPENAI_API_KEY=

# Note: Heavy coding tasks route through the Claude Code CLI, which uses your
# Claude Pro/Max subscription â€” no API credits. Install `claude` separately:
# https://docs.anthropic.com/en/docs/claude-code

# Slack (create app at https://api.slack.com/apps)
SLACK_APP_TOKEN=xapp-...
SLACK_BOT_TOKEN=xoxb-...

# Telegram (create bot via @BotFather)
TELEGRAM_BOT_TOKEN=

# GitHub (for PR/repo management)
GITHUB_TOKEN=

# Jira (for board tracking)
JIRA_BASE_URL=https://your-org.atlassian.net
JIRA_EMAIL=
JIRA_API_TOKEN=

# Port mappings (defaults shown)
FAMILIAR_GATEWAY_PORT=18789
FAMILIAR_BRIDGE_PORT=18790
OLLAMA_PORT=11434
