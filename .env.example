# ============================================
# Engie - Environment Variables
# Copy to .env and fill in your values
# ============================================

# Gateway auth token (generate with: openssl rand -hex 32)
OPENCLAW_GATEWAY_TOKEN=

# AI Providers
ANTHROPIC_API_KEY=
OPENAI_API_KEY=

# Slack (create app at https://api.slack.com/apps)
SLACK_APP_TOKEN=xapp-...
SLACK_BOT_TOKEN=xoxb-...

# Telegram (create bot via @BotFather)
TELEGRAM_BOT_TOKEN=

# GitHub (for PR/repo management)
GITHUB_TOKEN=

# Jira (for board tracking)
JIRA_BASE_URL=https://your-org.atlassian.net
JIRA_EMAIL=
JIRA_API_TOKEN=

# Port mappings (defaults shown)
ENGIE_GATEWAY_PORT=18789
ENGIE_BRIDGE_PORT=18790
OLLAMA_PORT=11434
